{
  "compilerOptions": {

    "target": "es2022", // JS version
    "lib": ["ES2023"],

    
    "paths": {
      "@/*": ["./src/*"] // this path only works on typescript compile
    },                           


    "module": "node16",                                     
    "esModuleInterop": true,                        
    "forceConsistentCasingInFileNames": true,  


    "strict": true,                                   
    "skipLibCheck": true                                
  }
}
